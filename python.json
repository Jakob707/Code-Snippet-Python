			"",
			"",
			"",
			"@ui.page('/main')",
			"def main():",
			"   ui.dark_mode(True)",
			"",
			"",
			"   with ui.column().classes('items-center justify-center w-full').style('margin-top: 50px; top: 40%;'):",
			"      ui.label('${1:label}').classes('font-bold').style('font-size: 40px;')",
			"",
			"",
			"$0",
			"",
			"",
			"ui.navigate.to('/main')",
			"ui.run(title='${2:Your App Title}', native=True)",
			
	 	],
		"description": "Nicegui main structure"
	 },

	 "if-main": {
